.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary, #94A3B8);
}

.form-card {
  padding: 30rpx;
  border-radius: 20rpx;
  background: var(--card-background, #1A2235);
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  margin-bottom: 15rpx;
  color: var(--text-secondary, #94A3B8);
}

.form-input {
  background: var(--card-background-light, #242F45);
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}

.form-textarea {
  background: var(--card-background-light, #242F45);
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

.type-selector {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 15rpx;
  background: var(--card-background-light, #242F45);
  transition: all 0.3s ease;
}

.type-option.active {
  background: var(--primary-color-light, #3A5BD9);
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.type-icon image {
  width: 40rpx;
  height: 40rpx;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.btn {
  flex: 1;
  padding: 25rpx 0;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}

.btn-primary {
  background: var(--primary-color, #4F6EF6);
  color: white;
}

.btn-secondary {
  background: var(--card-background-light, #242F45);
  color: white;
} 