.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary, #94A3B8);
}

.record-card {
  padding: 30rpx;
  border-radius: 20rpx;
  background: var(--card-background, #1A2235);
  margin-bottom: 40rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.record-type {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.record-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-icon image {
  width: 40rpx;
  height: 40rpx;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.record-name {
  font-size: 32rpx;
  font-weight: bold;
}

.record-date {
  font-size: 24rpx;
  color: var(--text-secondary, #94A3B8);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-radius: 15rpx;
  background: var(--card-background-light, #242F45);
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary, #94A3B8);
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.map-section {
  margin-bottom: 40rpx;
}

.route-map {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
}

.heart-rate-chart {
  background: var(--card-background-light, #242F45);
  border-radius: 15rpx;
  padding: 20rpx;
}

.notes {
  background: var(--card-background-light, #242F45);
  border-radius: 15rpx;
  padding: 30rpx;
  font-size: 28rpx;
  min-height: 150rpx;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.btn {
  flex: 1;
  padding: 25rpx 0;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}

.btn-primary {
  background: var(--primary-color, #4F6EF6);
  color: white;
}

.btn-secondary {
  background: var(--card-background-light, #242F45);
  color: white;
} 