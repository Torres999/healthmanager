.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-md {
  font-size: 28rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-secondary {
  color: var(--text-secondary, #94A3B8);
}

.font-bold {
  font-weight: bold;
}

.mt-20 {
  margin-top: 20rpx;
}

.courses-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.course-card {
  border-radius: 20rpx;
  overflow: hidden;
  background: var(--card-background, #1A2235);
}

.course-image {
  width: 100%;
  height: 300rpx;
}

.course-info {
  padding: 30rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
}

.course-duration {
  font-size: 24rpx;
  color: var(--text-secondary, #94A3B8);
  background: var(--card-background-light, #242F45);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}

.course-description {
  font-size: 26rpx;
  color: var(--text-secondary, #94A3B8);
  line-height: 1.5;
} 