.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  box-sizing: border-box;
}

.course-header {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 60rpx;
}

.course-image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.course-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.meditation-status {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.status-circle {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: var(--card-background, #1A2235);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  transition: all 0.5s ease;
}

.status-circle.active {
  box-shadow: 0 0 60rpx rgba(79, 110, 246, 0.4);
}

.timer-value {
  font-size: 80rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.timer-separator {
  margin: 0 10rpx;
}

.control-buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 60rpx;
}

.control-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.start-btn {
  background: linear-gradient(135deg, #4F6EF6, #3B5FE9);
}

.pause-btn {
  background: linear-gradient(135deg, #F6A54F, #E9953B);
}

.resume-btn {
  background: linear-gradient(135deg, #4F6EF6, #3B5FE9);
}

.stop-btn {
  background: linear-gradient(135deg, #F65F4F, #E93B3B);
}

.hidden {
  display: none;
}

.finish-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  color: white;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  background: transparent;
  border: 2rpx solid var(--border-color, #2A3649);
  color: var(--text-secondary, #94A3B8);
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.meditation-tips {
  width: 100%;
  padding: 30rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  background: var(--card-background, #1A2235);
} 