<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="logo-container">
    <image class="logo" src="/assets/icons/logo.png" mode="aspectFit"></image>
    <text class="app-name">健康管理</text>
  </view>
  
  <view class="login-form">
    <view class="login-title">登录</view>
    <view class="login-desc">登录后即可使用全部功能</view>
    
    <button class="login-btn" type="primary" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">
      微信一键登录
    </button>
    
    <view class="privacy-policy">
      登录即表示您同意<text class="link">《用户协议》</text>和<text class="link">《隐私政策》</text>
    </view>
  </view>
</view> 