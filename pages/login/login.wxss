/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: var(--background-color, #0B1121);
  padding: 30rpx;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color, #FFFFFF);
}

.login-form {
  width: 100%;
  background-color: var(--card-background, #151B2E);
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color, #FFFFFF);
  margin-bottom: 10rpx;
}

.login-desc {
  font-size: 26rpx;
  color: var(--text-secondary, #94A3B8);
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100% !important;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-radius: 45rpx;
  background-color: var(--primary-color, #4F6EF6) !important;
  margin-bottom: 30rpx;
}

.privacy-policy {
  font-size: 24rpx;
  color: var(--text-secondary, #94A3B8);
  text-align: center;
}

.link {
  color: var(--primary-color, #4F6EF6);
} 