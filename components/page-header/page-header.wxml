<view class="page-header" style="height: {{headerHeight}}px;">
  <view style="height: {{statusBarHeight}}px;"></view>
  <view class="header-content" style="height: {{capsuleHeight}}px; padding: 0 30rpx;">
    <view class="back-btn" wx:if="{{showBack}}" bindtap="goBack">
      <view class="back-arrow"></view>
    </view>
    <view class="title {{showBack ? 'has-back' : ''}}">{{title}}</view>
  </view>
</view>
